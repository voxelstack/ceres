{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "npm: compile:ts:watch",
                "npm: compile:web:watch",
                "npm: test:watch",

                "sphinx: build:watch"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile:ts:watch",
            "group": "build",
            "isBackground": true,
            "label": "npm: compile:ts:watch",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "type": "npm",
            "script": "compile:web:watch",
            "group": "build",
            "isBackground": true,
            "label": "npm: compile:web:watch",
            "problemMatcher": "$esbuild-watch",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "type": "npm",
            "script": "test:watch",
            "group": "build",
            "isBackground": true,
            "label": "npm: test:watch",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "command": [
                "sphinx-autobuild",
                ".",
                "_build",
                "--watch",
                "../dist/web",
                "--ignore",
                "_static/js/ceres.js"
            ],
            "group": "build",
            "isBackground": true,
            "label": "sphinx: build:watch",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        }
    ]
}
